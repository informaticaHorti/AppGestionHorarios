<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.GestionUsuarios">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginBottom="60dp"
            android:textSize="22sp"
            android:text="Gestion de Horarios Por Defecto"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:hint="Entra M."
                android:textSize="22sp"
                android:textAlignment="center"
                android:textColor="@color/teal_700"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:hint="Sale M."
                android:textSize="22sp"
                android:textAlignment="center"
                android:textColor="@color/colorFailDeep"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/HoraEntraM"
                android:hint="00:00"
                android:textSize="22sp"
                android:textAlignment="center"
                android:textColor="@color/teal_700"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/HoraSaleM"
                android:hint="00:00"
                android:textSize="22sp"
                android:textAlignment="center"
                android:textColor="@color/colorFailDeep"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:hint="Entra T."
                android:textSize="22sp"
                android:textAlignment="center"
                android:textColor="@color/teal_700"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:hint="Sale T."
                android:textSize="22sp"
                android:textAlignment="center"
                android:textColor="@color/colorFailDeep"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/HoraEntraT"
                android:hint="00:00"
                android:textSize="22sp"
                android:textAlignment="center"
                android:textColor="@color/teal_700"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/HoraSaleT"
                android:hint="00:00"
                android:textSize="22sp"
                android:textAlignment="center"
                android:textColor="@color/colorFailDeep"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <Button
            android:id="@+id/btnSaveHorarioDef"
            android:layout_marginTop="140dp"
            android:layout_gravity="center_horizontal"
            android:text="   Guardar Horario   "
            android:background="@drawable/round_button_blue"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.appcompat.widget.LinearLayoutCompat>


</FrameLayout>